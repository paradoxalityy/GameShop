@model IEnumerable<Platform>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row p4-4">
        <div class="col-6">
            <h2 class="text-primary">List of Platforms</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Platform" asp-action="Create" class="btn btn-outline-light">
                <i class="bi bi-plus-circle-fill"></i> &nbsp; Create New Platform
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Platform Name
            </th>
            <th>
                Edit
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var platform in Model)
        {
            <tr>
                <td width="50%">
                    @platform.Name
                </td>
                <td width="15%">
                    <div class="w-75 btn-group" role="group">
                            <a asp-area="Admin" asp-controller="Platform" asp-action="Edit" asp-route-id="@platform.Id" class="btn btn-info mx-4">
                                <i class="bi bi-pencil-square"></i> &nbsp; Edit
                            </a>
                            <a asp-area="Admin" asp-controller="Platform" asp-action="Delete" asp-route-id="@platform.Id" class="btn btn-danger mx-4">
                                <i class="bi bi-trash3"></i> &nbsp; Delete
                            </a>                   
                    </div>
                </td>
            </tr>    
        }
    </tbody>
</table>