@model ShoppingCart

<form method="post">
    <div class="card container pt-1">
        <div class="card-header bg-secondary text-light m-lg-0 row">
            <div class="col-12 col-md-6">
                <h1 class="text-white-50">@Model.Product.Name</h1>
                <p class="text-warning">Released by @Model.Product.Publisher</p>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge pt-2" style="background-color:darkorange">@Model.Product.Category.Name</span>
                <span class="badge pt-2" style="background-color:dimgrey">@Model.Product.Platform.Name</span>
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">
                        <div class="row pl-2">
                            <h5 class="text-muted"><b>Developer:</b> @Model.Product.Developer</h5>
                        </div>
                        <div class="row pl-2">
                            <h5 class="text-muted"><b>Publisher:</b> @Model.Product.Publisher</h5>
                        </div>
                        <div class="row text-center pl-2">
                            <div class="p-1 col-2 bg-secondary border-bottom">
                               <div>Quantity</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>1-50</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>51-100</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>100+</div>
                            </div>
                        </div>
                        <div class="row text-center pl-2" style="color:darkorange; font-weight:bold">
                            <div class="p-1 col-2 bg-secondary">
                                <div>Price</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary">
                                <div>@Model.Product.Price</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary">
                                <div>@Model.Product.Price50</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary">
                                <div>@Model.Product.Price100</div>
                            </div>
                        </div>
                        <div class="row pl-2">
                            <p class="text-secondary">@Model.Product.Description</p>
                        </div>
                        <div class="row pl-2">
                            <div class="col-2" style="color:darkorange">
                                <h4>Count</h4>
                            </div>
                            <div class="row pl-2">
                                <div class="col-9">
                                    <input asp-for="@Model.Count" class="form-control"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-2 col-lg-3 offset-lg-1 text-center" style="border-right: solid darkorange">
                        <img src="@Model.Product.ImageUrl" width="100%" class="rounded"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn form-control" style="background-color:darkorange">Back to Home</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" value="Add to Cart" class="btn btn-secondary form-control" style="background-color:dimgrey">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>