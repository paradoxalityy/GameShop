@model Platform 

<form method="post" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Platform</h2>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" class="form-control"/>
            <span asp-validation-for="@Model.Name" class="text-danger"></span> @*Server Side Validation*@
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary" style="width:150px">Create</button> 
            </div>
            <div class="col-6 text-end">
                <a asp-area="Admin" asp-controller="Platform" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
            </div>
        </div>
    </div>
</form>

@*Client Side Validation*@
@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}