@model ShoppingCart

<form method="post">
    <div class="card container">
        <div class="card-header bg-secondary text-light m-lg-0 row">
            <div class="col-12 col-md-6">
                <h1 class="text-white-50">@Model.Product.Name</h1>
                <p class="text-warning">Released by @Model.Product.Publisher</p>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge bg-info pt-2">@Model.Product.Category.Name</span>
                <span class="badge bg-dark pt-2">@Model.Product.Platform.Name</span>
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">
                        <div class="row pl-2">
                            <h5 class="text-muted">Developer: @Model.Product.Developer</h5>
                        </div>
                        <div class="row pl-2">
                            <h5 class="text-muted">Developer: @Model.Product.Developer</h5>
                        </div>
                        <div class="row text-center pl-2">
                            <div class="p-1 col-2 bg-secondary border-bottom">
                               <div>Quantity</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>1-50</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>51-100</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>100+</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>