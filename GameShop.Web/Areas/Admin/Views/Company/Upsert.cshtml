@model Company

<form method="post" asp-action="Upsert">
    <input asp-for="@Model.Id" hidden/>
    <div class="border b-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@(Model.Id==0 ? "Create" : "Update") Company</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" class="form-control"/>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.StreetAddress"></label>
            <input asp-for="@Model.StreetAddress" class="form-control" />
            <span asp-validation-for="@Model.StreetAddress" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.City"></label>
            <input asp-for="@Model.City" class="form-control" />
            <span asp-validation-for="@Model.City" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.State"></label>
            <input asp-for="@Model.State" class="form-control" />
            <span asp-validation-for="@Model.State" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.PostalCode"></label>
            <input asp-for="@Model.PostalCode" class="form-control" />
            <span asp-validation-for="@Model.PostalCode" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.PhoneNumber"></label>
            <input type="number" asp-for="@Model.PhoneNumber" class="form-control" />
            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary" style="width:150px">@(Model.Id==0 ? "Create" : "Update")</button>
            </div>
            <div class="col-6 text-end">
                <a asp-area="Admin" asp-controller="Company" asp-action="Index" class="btn btn-secondary" style="width:150px">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}