@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row pt-3" style="margin-right:5px">
                <div class="col-12 p-1" style="border:1px solid #AAAAAA; border-radius: 5px">
                    <div class="card" style="width:100%">
                        <img src="@product.ImageUrl" class="card-img-top rounder" style="height:300px">
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary" style="color:darkslateblue">@product.Name</p>
                                <p class="card-title text-info">by <b>@product.Developer</b></p>
                            </div>
                            <div class="pl-1">
                                <p>List price: <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                            </div>
                            <div class="pl-1">
                                <p>As low as: <b>@product.Price.ToString("0.00")</b></p>
                            </div>
                        </div>
                    </div>
                    <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary form-control">
                        Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>